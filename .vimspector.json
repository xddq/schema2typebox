{
  "configurations": {
    "run": {
      "adapter": "vscode-node",
      "breakpoints": {
        "exception": {
          "all": "N",
          "uncaught": "Y"
        }
      },
      "configuration": {
        "request": "launch",
        "protocol": "auto",
        "stopOnEntry": false,
        "console": "integratedTerminal",
        "program": "${workspaceRoot}/src/index.ts",
        "outFiles": ["${workspaceRoot}/dist/**/*.js"],
        "env": { "TS_NODE_BASEURL": "./dist" },
        "runtimeArgs": ["-r", "tsconfig-paths/register"],
        "cwd": "${workspaceRoot}"
      }
    },
    "test by file": {
      "adapter": "vscode-node",
      "breakpoints": {
        "exception": {
          "all": "N",
          "uncaught": "Y"
        }
      },
      "configuration": {
        "request": "launch",
        "protocol": "auto",
        "stopOnEntry": false,
        "console": "integratedTerminal",
        "outFiles": ["${workspaceRoot}/dist/**/*.js"],
        "program": "${workspaceRoot}/test/index.ts",
        "runtimeArgs": [
          "--test",
          "--test-reporter",
          "spec",
          "--test-name-pattern",
          "collect()",
          "--test-name-pattern",
          "object with array"
        ],
        "cwd": "${workspaceRoot}"
      }
    }
  }
}
