{
  "configurations": {
    "run": {
      "adapter": "js-debug",
      "breakpoints": {
        "exception": {
          "all": "N",
          "uncaught": "Y"
        }
      },
      "filetypes": ["javascript", "typescript"],
      "configuration": {
        "request": "attach",
        "stopOnEntry": false,
        "console": "integratedTerminal",
        "outFiles": ["${workspaceRoot}/dist/src/**/*.js"],
        "program": "${workspaceRoot}/src/cli/index.ts",
        "cwd": "${workspaceRoot}",
        "type": "pwa-node"
      }
    }
  }
}
